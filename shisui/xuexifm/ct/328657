<script src="https://huidu666.github.io/shisui/xuexifm/ct/jquery.min.js"></script>
<script src="https://huidu666.github.io/shisui/xuexifm/ct/jquery-weui.min.js"></script>
<script src="https://huidu666.github.io/shisui/xuexifm/ct/crypto.js"></script>
<script type="text/javascript">
    $(function() {
        $('#search').click(function() {
            var question = $('#question1').val();
            if (question.length < 1) {
                return;
            }
            //headers : {'Access-Control-Allow-Origin':'*'},
            var qtoken = Module.ccall("sign", "string", ["string"], [question]);
            $.ajax({
                type: 'post',
                url: "http://api.chaoxing360.com/exam/search/question/token/" + qtoken,
                data: {
                    question: question,
                    type: "text"
                },
                xhrFields: {
                    withCredentials: true
                },
                success: function(r) {
                    var result = JSON.parse(r);
                    if (result.code == 0) {
                        var obj = result.data;
                        if (JSON.stringify(obj) == "{}") {
                            obj.question = "该问题答案还未收录，请联系客服进行收录！";
                            obj.answer = obj.question;
                        }
                        $('#question1').val('');
                        $('#question2').html('<em>问题：</em>' + obj.question);
                        $('#answer').html('<em>答案：</em>' + obj.answer.replace(/\1/g, '、'));
                    } else if (result.code == 1004) { //需要登录
                        alert("查题时产生错误了，请重试！");
                        return;
                    } else {
                        alert("查题时产生错误了，请重试！");
                        return;
                    }
                }
            });
        });
    });
</script>

</html>