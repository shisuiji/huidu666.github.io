        <textarea class="weui_textarea" id="question1" placeholder="输入题目，点击搜索即可查看答案" rows="3"></textarea>
    </div>
    <div class="weui_cells weui_cells_form"> <a class="weui_btn weui_btn_primary" href="javascript:" id="search">搜索</a>
    </div>
